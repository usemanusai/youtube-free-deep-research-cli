# YouTube Chat CLI Configuration Template
# Copy this file to .env and fill in your API keys and settings

# Required: YouTube Data API v3 key (get from Google Cloud Console)
YOUTUBE_API_KEY="your_youtube_api_key_here"

# Optional: OpenRouter API key for AI features
OPENROUTER_API_KEY="your_api_key_here"

# Optional: n8n webhook URL for RAG integration
# Your local n8n workflow URL (already configured for your setup)
N8N_WEBHOOK_URL="http://localhost:5678/workflow/vTN9y2dLXqTiDfPT"

# Optional: MaryTTS server URL for advanced TTS
MARYTTS_SERVER_URL="http://localhost:59125"

# Rate limiting settings for YouTube API
MAX_VIDEOS_PER_DAY=5
MIN_DELAY_HOURS=1
MAX_DELAY_HOURS=2
BACKOFF_HOURS=2

# TTS Configuration
DEFAULT_TTS_VOICE="en-US-AriaNeural"
