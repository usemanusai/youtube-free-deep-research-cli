# YouTube Chat CLI Configuration
# Copy this file to .env and fill in your API keys

# Required: YouTube Data API v3 key
# Get from: https://console.cloud.google.com/apis/credentials
YOUTUBE_API_KEY=your_youtube_api_key_here

# Required for AI features: OpenRouter API key
# Get from: https://openrouter.ai/keys
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Optional: n8n webhook URL for RAG workflow integration
# Format: http://your-n8n-server:5678/webhook/your-workflow-id
N8N_WEBHOOK_URL=http://localhost:5678/webhook/vTN9y2dLXqTiDfPT

# Optional: MaryTTS server URL for advanced TTS
# Default: http://localhost:59125
MARYTTS_SERVER_URL=http://localhost:59125

# Rate Limiting Configuration (optional)
# Maximum videos to process per day (default: 5)
MAX_VIDEOS_PER_DAY=5

# Minimum delay between video processing in hours (default: 1)
MIN_DELAY_HOURS=1

# Maximum delay between video processing in hours (default: 2)
MAX_DELAY_HOURS=2

# Backoff duration when rate limiting detected in hours (default: 2)
BACKOFF_HOURS=2

# Logging Configuration (optional)
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL (default: INFO)
LOG_LEVEL=INFO

# Log file path (optional, logs to console if not specified)
# LOG_FILE=/path/to/logfile.log

# Database Configuration (optional)
# Custom database path (default: ~/.youtube-chat-cli/videos.db)
# DATABASE_PATH=/custom/path/to/videos.db

# TTS Configuration (optional)
# Default TTS library to use
# Options: gtts, edge-tts, kokoro, openvoice, melotts, chatterbox
DEFAULT_TTS_LIBRARY=edge-tts

# Default voice for TTS (library-specific)
DEFAULT_TTS_VOICE=en-US-AriaNeural

# Background Service Configuration (optional)
# Service check interval in minutes (default: 30)
SERVICE_CHECK_INTERVAL=30

# Channel scan interval in hours (default: 24)
CHANNEL_SCAN_INTERVAL=24

# Video processing interval in hours (default: 2)
VIDEO_PROCESSING_INTERVAL=2
