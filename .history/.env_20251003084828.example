# Example configuration for Nexus Agents
# Copy to .env and adjust values

# Search and Aggregation
SEARCH_BACKENDS=brave,legacy
BRAVE_API_KEY=

# Scraper
SCRAPER_DEPTH=1
SCRAPER_MAX_PAGES=50
SCRAPER_TIMEOUT_S=60
SCRAPER_HEADLESS=true
SCRAPER_USER_AGENT=JAEGIS-NexusScraper/1.0
SCRAPER_RESPECT_ROBOTS=true
SCRAPER_RATE_LIMIT_QPS=0.5
SCRAPER_RETRY_ATTEMPTS=3
SCRAPER_WAIT_FOR_IDLE=true
SCRAPER_SCREENSHOT_ON_ERROR=true

# Playwright (optional for JS-heavy sites)
SCRAPER_PLAYWRIGHT_STEALTH=true
SCRAPER_PROXY_URL=
SCRAPER_BLOCK_RESOURCES=analytics,ad,tracker,image,media
SCRAPER_COOKIES_JSON=[]
SCRAPER_LOCAL_STORAGE_JSON={}
SCRAPER_VIEWPORT=desktop
SCRAPER_CANVAS_SPOOF=true
# Per-site waits: JSON mapping host->selector or '*' for default
SCRAPER_WAIT_SELECTORS={"*": ["article", "main"]}

# Duplicate detection
DUPLICATE_SIMILARITY_REDUNDANT=0.85
DUPLICATE_SIMILARITY_OVERLAP=0.70
DUPLICATE_TIME_WINDOW_DAYS=365
DUPLICATE_TIME_DECAY_HALF_LIFE_DAYS=180
DUPLICATE_CITATION_OVERLAP_WEIGHT=0.15
DUPLICATE_THRESHOLDS_JSON={}
DUPLICATE_CLUSTERING_ENABLED=true

# Nexus workflow
NEXUS_MAX_TURNS=100
NEXUS_MAX_LOOPS=10
NEXUS_DEBUG=false

# Google Drive indexing
GDRIVE_INDEXING_BATCH_SIZE=10
GDRIVE_INDEXING_RETRY_ATTEMPTS=3

# Queue
QUEUE_DEAD_RETRY=5



# Redis Cache (optional)
REDIS_ENABLED=false
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_CACHE_TTL_SECONDS=300
